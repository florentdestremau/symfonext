{% extends 'base.html.twig' %}

{% block title %}Briefcase{% endblock %}

{% block body %}
    <h1>Briefcase</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ briefcase.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ briefcase.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ briefcase.createdAt ? briefcase.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_briefcase_index') }}">back to list</a>

    <a href="{{ path('app_briefcase_edit', {'id': briefcase.id}) }}">edit</a>

    {{ include('briefcase/_delete_form.html.twig') }}
{% endblock %}
